    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Deletar</h1>

<h3>Você realmente quer deletar essa Igreja?</h3>
<div>
    <h4>Igreja</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.denominacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.denominacao)
        </dd>
        <dt class = "col-sm-2">
