@model SistemaGestaoCantinasIgrejas.Models.Venda

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registrar nova</h1>

<h4>Venda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="participanteid" class="control-label"></label>
                <select asp-for="participanteid" class="form-control" asp-items="ViewBag.participanteid">
                    <option selected="selected" value="">Selecione um participante</option>
                </select>
                <span asp-validation-for="participante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="produtoid" class="control-label"></label>
                <select asp-for="produtoid" class="form-control" asp-items="ViewBag.produtoid">
                    <option selected="selected" value="">Selecione um produto</option>
                </select>
                <span asp-validation-for="produto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="quantidade" class="control-label"></label>
                <input asp-for="quantidade" class="form-control" onblur="calcular()" />
                <span asp-validation-for="quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="valor" class="control-label"></label>
                <input asp-for="valor" class="form-control" onblur="calcular()" />
                <span asp-validation-for="valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="data" class="control-label"></label>
                <input asp-for="data" class="form-control" />
                <span asp-validation-for="data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar às vendas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function Calcular(){
            var qtde = Number(document.getElementById("quantidade").value);
            var valor = Number(document.getElementById("valor").value);
            var total = document.getElementById("total");
            var calc = qtde * valor;
            var f = calc.toLocaleString('pt-br', { style: 'currency', currency: 'BRL' });
            if (total.textContent == undefined)
                total.textContent = f;
            else
                total.innerText = f;
        }
    </script>
}
